
<div id="result-header">
  <h1>Listing of recently reported events containing: <span id="header-term"><%= @search_term %></span></h1>
</div>

<div id="buffer"></div>
<% @recent_events.each do |event| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 id="report-number" ><%= event.report_number %></h4>
      <ul>
      <li>Device - Generic Name <%= event.generic_name %> </li>
      <li>Device Brand Name - Full Name: <%= event.brand_name %></li>
      <li>Event Type: <%= event.event_type %></li>
      <li>Reported By: <%= event.reporter_occupation %></li>
      <li>Date Of Event: <%= event.date_of_event %></li>
      <li>Manufacturer: <%= event.manufacturer_name %></li>
      <li>Description: <%= event.mdr_text %></li>
      </ul>
    </div>
  </div>
<% end %>

