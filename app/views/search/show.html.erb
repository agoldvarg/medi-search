<h2>Listing of recent reported events containing: <span id="report_number"><%= @search_term %></span></h2>

<% @recent_events.each do |event| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 id="report_number" ><%= event.report_number %></h4>
      <ul>
      <li>Device - Full Name: <%= event.brand_name %></li>
      <li>Event Type: <%= event.event_type %></li>
      <li>Reported By: <%= event.reporter_occupation %></li>
      <li>Date Of Event: <%= event.date_of_event %></li>
      <li>Manufacturer: <%= event.manufacturer_name %></li>
      </ul>
    </div>
  </div>
<% end %>
