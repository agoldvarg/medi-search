

<%= form_tag '/searches', method: "POST", :class => 'navbar-form navbar-left', :role => 'search', remote: true do %>
  <div class="form-group">
    <%= select_tag "search_type", "<option>Search By...</option><option>Device Name</option><option>Manufacturer</option><option>Description</option>".html_safe %>
  </div>
  <div class='form-group'>
    <%= text_field_tag("search[search_term]", nil, placeholder: 'search', :class => 'form-control') %>
  </div>
  <%= submit_tag "Search", class: 'btn btn-default btn-sm', style: "display: block; width: 100%;" %>
<% end %>
